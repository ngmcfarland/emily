                        "redirect": "SUNRISE IN {{}}"
                    }
                },
                {
                    "pattern": "WHAT TIME IS SUNSET",
                    "template": {
                        "type": "WU",
                        "command": "get_location.where_am_i('CITY')",
                        "redirect": "SUNSET IN {{}}"
                    }
                },
                {
                    "pattern": "HOW HOT IS IT OUTSIDE",
                    "template": {
                        "type": "U",
                        "redirect": "WHAT IS THE TEMPERATURE"
                    }
                },
                {
                    "pattern": "HOW COLD IS IT OUTSIDE",
                    "template": {
                        "type": "U",
                        "redirect": "WHAT IS THE TEMPERATURE"
                    }
                },
                {
                    "pattern": "WHEN IS SUNSET",
                    "template": {
                        "type": "U",
                        "redirect": "WHAT TIME IS SUNSET"
                    }
                },
                {
                    "pattern": "WHEN IS SUNRISE",
